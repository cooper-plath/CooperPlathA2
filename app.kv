# Create your Kivy layout in the kv language here
BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.3


        Spinner:
            id: category_selection
            text: app.current_category
            values: app.category_codes
            on_text: app.change_category(self.text)
        Label:
            text: 'Name:'
        TextInput:
            id: name_input
            multiline: False
            write_tab: False
        Label:
            text: 'Country:'
        TextInput:
            id: country_input
            multiline: False
            write_tab: False
        Label:
            text: 'Priority:'
        TextInput:
            id: priority_input
            multiline: False
        Button:
            text: 'Add Place'
            on_release: app.press_add(name_input.text, country_input.text, priority_input.text)
        Button:
            text: 'Clear'
            on_release: app.press_clear()
    BoxLayout:
        orientation: 'vertical'

        Label:
            id: total_unvisited_status
            font_size: 20
            size_hint_y: 0.2
        BoxLayout:
            orientation: 'vertical'
            id: locations_box
        Label:
            id: location_clicked_status
            font_size: 20
            size_hint_y: 0.1

